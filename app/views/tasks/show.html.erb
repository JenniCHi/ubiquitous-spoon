<h1><%= @task.title %></h1>

<p><em> <%= @task.details%> </em> </p>
<p> Completed <%= link_to(
               check_box_tag(:task,:completed,@task.completed),
               "/tasks/#{@task.id}/complete/#{!@task.completed}" ) %> </p><br>
<%= link_to 'Edit Task', edit_task_path(@task)%>
<%= link_to 'Delete Task', task_path(@task), method: :delete%>